<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1Visitante"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_marginTop="124dp"
        android:text="+1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/txtPuntosVisitante"
        app:layout_constraintTop_toBottomOf="@+id/btnResultado" />

    <Button
        android:id="@+id/btn1Local"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_marginTop="128dp"
        android:text="+1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toEndOf="@+id/txtPuntosLocal"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2Local"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="+2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintStart_toEndOf="@+id/txtPuntosLocal"
        app:layout_constraintTop_toBottomOf="@+id/btn1Local" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="151dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dep_0002" />

    <Button
        android:id="@+id/btn2Visitante"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:text="+2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/txtPuntosVisitante"
        app:layout_constraintTop_toBottomOf="@+id/btn1Visitante" />

    <Button
        android:id="@+id/btnResultado"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginTop="92dp"
        android:text=">"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/btn2Local" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="69dp"
        android:layout_height="61dp"
        android:layout_marginTop="128dp"
        app:icon="@drawable/historia"
        app:iconSize="35dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenosLocal" />

    <TextView
        android:id="@+id/txtLocal"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:text="Local"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtPuntosLocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/txtVisitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Visitante"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPuntosVisitante" />

    <TextView
        android:id="@+id/txtPuntosLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />

    <TextView
        android:id="@+id/txtPuntosVisitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="14"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/btnMenosLocal"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_marginTop="144dp"
        android:text="-1"
        app:layout_constraintEnd_toStartOf="@+id/txtPuntosLocal"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMenosVisitante"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:layout_marginBottom="108dp"
        android:text="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtPuntosVisitante"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRefresh"
        app:layout_constraintVertical_bias="0.831"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>