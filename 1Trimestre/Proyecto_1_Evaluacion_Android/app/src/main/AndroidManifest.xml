<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyecto_1_evaluacion_android"
    tools:ignore="CoarseFineLocation">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_1ยบ_Evaluacion_Android">
        <activity
            android:name=".FotosActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivityCantavieja"
            android:exported="false"
            android:label="@string/title_activity_maps_cantavieja"
            android:theme="@style/BlueTheme" />
        <activity
            android:name=".Restaurante.Restaurantes"
            android:exported="false"
            android:theme="@style/RedTheme" />
        <activity
            android:name=".Turismo.TurismoActivity"
            android:exported="false"
            android:theme="@style/GreenDarkTheme" />
        <activity
            android:name=".Turismo.detalleTurismoActivity"
            android:exported="false"
            android:theme="@style/GreenDarkTheme" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>